<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="paylater" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Paga+Tarde</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sandbox" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Testing or Production</label>
                    <source_model>DigitalOrigin\Pmt\Model\Adminhtml\Source\SandboxType</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="backoffice_button" type="button" translate="button_label" sortOrder="2" showInDefault="1" showInWebsite="1">
                    <attribute type="button_label">Go to Paga+Tarde</attribute>
                    <attribute type="button_url">
                        <![CDATA[https://bo.pagamastarde.com]]>
                    </attribute>
                    <attribute type="button_credentials_label">Get Credentials</attribute>
                    <attribute type="button_credentials_url">
                        <![CDATA[https://bo.pagamastarde.com/shop]]>
                    </attribute>
                    <frontend_model>DigitalOrigin\Pmt\Model\Adminhtml\Source\ConfigButtonLinkType</frontend_model>
                </field>
                <field id="test_public_key" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>TEST Public API Key</label>
                </field>
                <field id="test_secret_key" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>TEST Private API Key</label>
                </field>
                <field id="prod_public_key" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>PROD Public API Key</label>
                </field>
                <field id="prod_secret_key" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>PROD Private API Key</label>
                </field>
                <field id="display_mode" translate="label" type="select" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>How to open payment</label>
                    <source_model>DigitalOrigin\Pmt\Model\Adminhtml\Source\DisplayType</source_model>
                </field>
                <field id="product_simulator" translate="label" type="select" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Product Simulator</label>
                    <source_model>DigitalOrigin\Pmt\Model\Adminhtml\Source\SimulatorType</source_model>
                </field>
                <field id="checkout_simulator" translate="label" type="select" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Checkout Simulator</label>
                    <source_model>DigitalOrigin\Pmt\Model\Adminhtml\Source\SimulatorType</source_model>
                </field>
                <field id="min_amount" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Minimum cart amount (ex: 24.99)</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="promotion_extra" translate="label" type="text" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Promotion Product Extra</label>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="13" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
            </group>
        </section>
    </system>
</config>
