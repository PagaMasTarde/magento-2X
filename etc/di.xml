<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="PaylaterFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Paylater\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Paylater\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">PaylaterValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PaylaterCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="PaylaterConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Paylater\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with PaylaterConfig -->
    <virtualType name="PaylaterLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">PaylaterConfig</argument>
        </arguments>
    </virtualType>

    <type name="Paylater\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">PaylaterLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="PaylaterCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">PaylaterAuthorizeCommand</item>
                <item name="capture" xsi:type="string">PaylaterCaptureCommand</item>
                <item name="void" xsi:type="string">PaylaterVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="PaylaterAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PaylaterAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">PaylaterResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Paylater\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Paylater\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="PaylaterAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Paylater\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Paylater\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Paylater\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaylaterConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="PaylaterCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Paylater\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Paylater\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Paylater\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Paylater\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Paylater\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Paylater\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaylaterConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="PaylaterVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Paylater\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Paylater\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Paylater\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Paylater\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Paylater\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Paylater\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaylaterConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="PaylaterResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Paylater\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Paylater\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="PaylaterValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PaylaterConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PaylaterConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PaylaterConfig</argument>
        </arguments>
    </virtualType>

    <type name="Paylater\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">PaylaterConfig</argument>
        </arguments>
    </type>

</config>
