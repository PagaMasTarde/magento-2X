<?xml version="1.0"?>
<config>
    <default>
        <payment>
            <paylater>
                <active>0</active>
                <title>Financiación instantánea</title>
                <checkout_description>Paga hasta en 12 cómodas cuotas con Paga+Tarde. Solicitud totalmente online y sin
papeleos, ¡y la respuesta es inmediata!</checkout_description>
                <currency>EUR</currency>
                <is_gateway>1</is_gateway>
                <model>PaylaterFacade</model>
                <payment_action>sale</payment_action>
                <order_status>pending_payment</order_status>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>0</can_use_internal>
                <can_authorize>0</can_authorize>
                <can_capture>0</can_capture>
                <can_refund>0</can_refund>
                <can_void>0</can_void>
                <can_cancel>0</can_cancel>
                <allowspecific>0</allowspecific>
                <checkout_simulator>6</checkout_simulator>
                <product_simulator>6</product_simulator>
                <min_amount>0</min_amount>
                <max_amount>10000</max_amount>
                <min_installments>3</min_installments>
                <max_installments>12</max_installments>
                <price_selector>div.price-final_price span.price-wrapper span.price</price_selector>
                <quantity_selector>div.fieldset div.qty div.control input.qty</quantity_selector>
                <ok_url>checkout/onepage/success</ok_url>
                <ko_url>checkout/#payment</ko_url>
            </paylater>
        </payment>
    </default>
</config>
